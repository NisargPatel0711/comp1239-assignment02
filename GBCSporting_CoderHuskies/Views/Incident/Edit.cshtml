@model Incident
@{
    ViewBag.Title = ViewBag.Action + " Incident";
}

<div class="container">
    <h1>@ViewBag.Action Incident</h1>
    <div class="border border-dark rounded p-4 mt-4 bg-white">
        <form asp-action="Edit" method="post">
            <div class="mb-3 row">
                <label asp-for="CustomerId" class="col-sm-2 col-form-label">Customer</label>
                <div class="col-sm-10">
                    <select asp-for="CustomerId" class="form-control">
                        <option value="">Select Customer</option>
                        @foreach (Customer c in ViewBag.Customer)
                        {
                            <option value="@c.CustomerId">@c.FirstName @c.LastName</option>
                        }
                    </select>
                    <p class="text-danger">@Html.ValidationMessageFor(msg => msg.CustomerId)</p>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="ProductId" class="col-sm-2 col-form-label">Product</label>
                <div class="col-sm-10">
                    <select asp-for="ProductId" class="form-control">
                        <option value="">Select Product</option>
                        @foreach (Product product in ViewBag.Product)
                        {
                            <option value="@product.ProductId">@product.Name</option>
                        }
                    </select>
                    <p class="text-danger">@Html.ValidationMessageFor(msg => msg.CustomerId)</p>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Title" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input asp-for="Title" class="form-control">
                    <p class="text-danger">@Html.ValidationMessageFor(msg => msg.Title)</p>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>                    
                    <p class="text-danger">@Html.ValidationMessageFor(msg => msg.Description)</p>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="TechnicianId" class="col-sm-2 col-form-label">Technician</label>
                <div class="col-sm-10">
                    <select asp-for="TechnicianId" class="form-control">
                        <option value="">Select Technician</option>
                        @foreach (Technician technician in ViewBag.Technician)
                        {
                            <option value="@technician.TechnicianId">@technician.Name</option>
                        }
                    </select>
                    <p class="text-danger">@Html.ValidationMessageFor(msg => msg.TechnicianId)</p>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="DateOpened" class="col-sm-2 col-form-label">Date Opened</label>
                <div class="col-sm-10">
                    <input asp-for="DateOpened" class="form-control">
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="DateClosed" class="col-sm-2 col-form-label">Date Closed</label>
                <div class="col-sm-10">
                    <input asp-for="DateClosed" class="form-control">
                </div>
            </div>

            <input type="hidden" asp-for="IncidentId" />

            <button type="submit" class="btn btn-primary d-inline-flex align-items-center">
                @if (ViewBag.Action == "Add")
                {
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard2-plus" viewBox="0 0 16 16">
                        <path d="M9.5 0a.5.5 0 0 1 .5.5.5.5 0 0 0 .5.5.5.5 0 0 1 .5.5V2a.5.5 0 0 1-.5.5h-5A.5.5 0 0 1 5 2v-.5a.5.5 0 0 1 .5-.5.5.5 0 0 0 .5-.5.5.5 0 0 1 .5-.5h3Z" />
                        <path d="M3 2.5a.5.5 0 0 1 .5-.5H4a.5.5 0 0 0 0-1h-.5A1.5 1.5 0 0 0 2 2.5v12A1.5 1.5 0 0 0 3.5 16h9a1.5 1.5 0 0 0 1.5-1.5v-12A1.5 1.5 0 0 0 12.5 1H12a.5.5 0 0 0 0 1h.5a.5.5 0 0 1 .5.5v12a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5v-12Z" />
                        <path d="M8.5 6.5a.5.5 0 0 0-1 0V8H6a.5.5 0 0 0 0 1h1.5v1.5a.5.5 0 0 0 1 0V9H10a.5.5 0 0 0 0-1H8.5V6.5Z" />
                    </svg>
                }
                else
                {
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                    </svg>
                }
                &nbsp;&nbsp;@ViewBag.Action
            </button>
            &nbsp;&nbsp;
            <a asp-controller="Incident" asp-action="List" class="btn btn-danger d-inline-flex align-items-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z" />
                </svg>
                &nbsp;&nbsp;Cancel
            </a>
        </form>
    </div>
</div>

@model Customer
@{
    ViewBag.Title = "Delete Customer";
    string CountryName = "";
    foreach (Country c in ViewBag.Country)
    {
        if (Model.CountryId == c.CountryId)
        {
            CountryName = c.Name;
        }
    }
}

<div class="container">
    <h1>Confirm Deletion</h1>
    <div class="border border-dark rounded p-4 mt-4 bg-white">
        <div class="row mb-2">
            <label class="col-2 col-form-label">First Name</label>
            <div class="col-5">
                <p class="form-control">@Model.FirstName</p>
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-2 col-form-label">Last Name</label>
            <div class="col-5">
                <p class="form-control">@Model.LastName</p>
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-2 col-form-label">Address</label>
            <div class="col-5">
                <p class="form-control">@Model.Address</p>
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-2 col-form-label">City</label>
            <div class="col-5">
                <p class="form-control">@Model.City</p>
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-2 col-form-label">State</label>
            <div class="col-5">
                <p class="form-control">@Model.State</p>
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-2 col-form-label">Postal Code</label>
            <div class="col-5">
                <p class="form-control">@Model.PostalCode</p>
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-2 col-form-label">Country</label>
            <div class="col-5">
                <p class="form-control">@CountryName</p>
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-2 col-form-label">Email</label>
            <div class="col-5">
                <p class="form-control">@Model.Email</p>
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-2 col-form-label">Phone</label>
            <div class="col-5">
                <p class="form-control">@Model.Phone</p>
            </div>
        </div>


        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="CustomerId" />

            <button type="submit" class="btn btn-primary d-inline-flex align-items-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                </svg>
                &nbsp;&nbsp;Delete
            </button>
            &nbsp;&nbsp;
            <a asp-controller="Customer" asp-action="List" class="btn btn-danger d-inline-flex align-items-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z" />
                </svg>
                &nbsp;&nbsp;Cancel
            </a>
        </form>
    </div>
</div>
